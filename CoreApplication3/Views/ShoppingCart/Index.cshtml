@model ShoppingCartViewModel


<div class="container mt-4">
    <h2>Your Shopping Cart</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Selected Amount</th>
                <th>Car</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var line in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td>@line.Amount</td>
                    <td>@line.Car.Name</td>
                    <td>@line.Car.Price.ToString("c")</td>
                    <td>@((line.Amount * line.Car.Price).ToString("c"))</td>
                    <td>Pending...</td>
                </tr>
            }

        
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">Total: @Model.ShoppingCartTotal.ToString("c")</td>
            </tr>
        </tfoot>
    </table>
    <li class="nav-item">
        <a class="nav-link text-danger" asp-area="" asp-controller="Order" asp-action="Checkout">Check Out</a>
    </li>
</div>





















