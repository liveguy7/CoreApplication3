@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<div class="container my-5">
    <h2 class="mb-4">Policy Details</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Section</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Information Collection</td>
                    <td>We collect personal information such as name, email, and usage data to provide better services.</td>
                </tr>
                <tr>
                    <td>Use of Information</td>
                    <td>Your information is used to improve our services, send updates, and provide personalized experiences.</td>
                </tr>
                <tr>
                    <td>Data Sharing</td>
                    <td>We do not sell your data. We may share it with trusted partners for analytics and service improvements.</td>
                </tr>
                <tr>
                    <td>Cookies</td>
                    <td>We use cookies to enhance user experience, track site usage, and remember preferences.</td>
                </tr>
                <tr>
                    <td>Data Security</td>
                    <td>All collected data is stored securely with encryption and strict access controls.</td>
                </tr>
                <tr>
                    <td>Contact</td>
                    <td>For privacy concerns, you can contact us at <a href="mailto:privacy@na.com">privacy@na.com</a>.</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

